{
	"index": {
	       "number_of_shards": 5,
	       "number_of_replicas":2
	},
	"analysis": {
		"filter" : {
			"NGramFilter": {
				"type": "edgeNGram",
				"min_gram": 1,
				"max_gram": 60
			}
		},
		"analyzer": {
			"item_search": {
				"type": "standard"
			},
			"NGramAnalyzer": {
				"type": "custom",
				"tokenizer": "standard",
				"filter": [ "lowercase", "NGramFilter" ]
			} 
		}
	}
}	
